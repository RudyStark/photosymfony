{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Inscription</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}

                <div class="mb-3">
                    {{ form_label(registrationForm.email) }}
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.email) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.plainPassword.first) }}
                    {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.plainPassword.first) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.plainPassword.second) }}
                    {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.plainPassword.second) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.customer.firstname) }}
                    {{ form_widget(registrationForm.customer.firstname, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.customer.firstname) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.customer.lastname) }}
                    {{ form_widget(registrationForm.customer.lastname, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.customer.lastname) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.customer.age) }}
                    {{ form_widget(registrationForm.customer.age, {'attr': {'class': 'form-control', 'type': 'number'}}) }}
                    {{ form_errors(registrationForm.customer.age) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.customer.address) }}
                    {{ form_widget(registrationForm.customer.address, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.customer.address) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.customer.city) }}
                    {{ form_widget(registrationForm.customer.city, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.customer.city) }}
                </div>

                <div class="mb-3">
                    {{ form_label(registrationForm.customer.country) }}
                    {{ form_widget(registrationForm.customer.country, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(registrationForm.customer.country) }}
                </div>


                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="termsCheck">
                    <label class="form-check-label" for="termsCheck">J'accepte les termes et conditions</label>
                </div>

                <button type="submit" class="btn btn-primary">S'inscrire</button>

                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
