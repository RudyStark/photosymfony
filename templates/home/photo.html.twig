{% extends 'base.html.twig' %}

{% block title %}{{ photo.title }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                <img src="{{ photo.url }}" class="img-fluid" alt="Photo description">
                <h3 class="mt-2 text-center">{{ photo.title }}</h3>
                <p>{{ photo.description }}</p>
                <p><strong>Tags:</strong>
                    {% for tag in photo.tags %}
                        <span style="font-weight: bold; color: black;">{{ tag.name }}</span>{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </p>
            </div>
        </div>
    </div>
{% endblock %}


