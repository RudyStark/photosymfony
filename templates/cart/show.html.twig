{% extends 'base.html.twig' %}

{% block title %}Votre Panier{% endblock %}

{% block body %}
    <div class="container cart-container">
        <h1>Votre Panier</h1>
        {% if items|length > 0 %}
            <div class="row">
                {% for item in items %}
                    <div class="col-md-8 offset-md-2">
                        <div class="card cart-item-card">
                            <div class="card-body d-flex">
                                <img src="{{ item.photo.url }}" class="cart-photo" alt="{{ item.photo.title }}">
                                <div>
                                    <h5 class="card-title">{{ item.photo.title }}</h5>
                                    <p class="card-text">{{ item.photo.price }} €</p>
                                </div>
                                <div class="cart-item-actions">
                                    <a href="{{ path('cart_decrease', {'id': item.photo.id}) }}" class="btn btn-sm btn-warning btn-cart-action">-</a>
                                    <span>{{ item.quantity }}</span>
                                    <a href="{{ path('cart_increase', {'id': item.photo.id}) }}" class="btn btn-sm btn-success btn-cart-action">+</a>
                                    <a href="{{ path('cart_remove', {'id': item.photo.id}) }}" class="btn btn-sm btn-danger btn-cart-action">Supprimer</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="cart-total">
                <strong>Total:</strong> {{ total | number_format(2, '.', ',') }} €
                <a href="{{ path('cart_clear') }}" class="btn btn-primary ml-3">Vider le Panier</a>
            </div>
        {% else %}
            <p>Votre panier est vide.</p>
        {% endif %}
    </div>
{% endblock %}
